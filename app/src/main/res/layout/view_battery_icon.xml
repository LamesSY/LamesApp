<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="21dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_stroke_rect_r2">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/batteryProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:progress="100"
            app:indicatorColor="?attr/text_1"
            app:trackColor="@color/transparent"
            app:trackCornerRadius="1dp"
            app:trackThickness="8dp" />

    </FrameLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="4dp"
        android:layout_marginStart="0.6dp"
        android:background="@drawable/shape_right_circle" />

</LinearLayout>