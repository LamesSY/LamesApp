<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundCornerStyle8dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundCornerStyle10dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="XTFillButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">?attr/tsp18</item>
    </style>

    <style name="XTTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">?attr/tsp18</item>
    </style>

    <style name="XTEditTextStyle">
        <item name="android:textSize">?attr/tsp18</item>
        <item name="android:textColorHint">?attr/text_4</item>
        <item name="android:textColor">?attr/text_1</item>
        <item name="android:background">@drawable/selector_edit_text_underline</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_cursor</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="TabTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">?attr/tsp18</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

    <declare-styleable name="VerificationCodeEditText">
        <attr name="figures" format="integer" />
        <attr name="verCodeMargin" format="dimension" />
        <attr name="bottomLineSelectedColor" format="reference" />
        <attr name="bottomLineNormalColor" format="reference" />
        <attr name="bottomLineHeight" format="dimension" />
        <attr name="selectedBackgroundColor" format="reference" />
        <attr name="cursorDuration" format="integer" />
        <attr name="cursorWidth" format="dimension" />
        <attr name="cursorColor" format="color|reference" />
    </declare-styleable>

</resources>